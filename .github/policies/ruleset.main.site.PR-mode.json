{
  "name": "PR mode for live site (optional)",
  "enforcement": "evaluate",
  "bypass_actors": [
    { "actor_type": "Integration", "actor_id": 4, "actor_name": "github-actions[bot]" },
    { "actor_type": "RepositoryRole", "role_name": "admin" }
  ],
  "conditions": {
    "ref_name": {
      "include": ["refs/heads/main"],
      "exclude": []
    }
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "dismiss_stale_reviews_on_push": true,
        "require_code_owner_review": false,
        "required_approving_review_count": 1
      }
    },
    { "type": "non_fast_forward" },
    { "type": "restrict_creation" }
  ]
}
